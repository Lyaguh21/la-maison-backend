generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?  @unique
  age       Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  WAITER
  COOK
  CUSTOMER
}

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  passwordHash       String
  hashedRefreshToken String? // может быть null (если не залогинен)
  tokenVersion       Int      @default(0)
  role               Role     @default(CUSTOMER)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
